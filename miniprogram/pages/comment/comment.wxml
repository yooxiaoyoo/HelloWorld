<!--miniprogram/pages/comment/conmment.wxml-->
<view>
  <view class="datail-container" style="background:url({{detail.cover_url}}) no-repeat top/cover"></view>
  <view class="detail-mask"></view>
  <view class="detail-info">
    <image src="{{detail.cover_url}}" class="datail-img"></image>
    <view class="detail">
      <view class="detail-nm">{{detail.title}}</view>
      <view>{{detail.original_title}}</view>
      <view class="detail.sc">{{datail.rating.average}}分</view>
      <view>{{detail.countries[0]}}</view>
      <view>导演：{{detail.directors[0].name}}</view>
    </view>  
  </view>
  <view class="desc">{{detail.summary}}</view>
  <!-- 评价 -->
  <van-field
    value="{{ content }}"
    placeholder="写一些评价吧"
    bind:change="onContentChange"
  />
</view>
