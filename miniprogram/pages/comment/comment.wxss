/* miniprogram/pages/comment/conmment.wxss */
.datail-container{
  height: 400rpx;
  filter:blur(40rpx);
  opacity: .4;
}
.datail-mask{
  position: absolute;
  width: 100%;
  height: 400rpx;
  background-color: #333;
  top: 0;
  left: 0;
  z-index: -1;
}
.datail-img{
  width: 280rpx;
  height: 90%;
}


.desc{
  padding:20rpx;
  color:#555;
  font-size: 24rpx;
}
.comment{
  padding: 20rpx;
}
.comment-content{
  border:1px solid #ccc;
  width: 100%;
  box-sizing: border-box;
  font-size: 32rpx;
  border-radius: 8rpx;
  padding: 20rpx;
}
.comment-image image{
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx;
}